<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" 
        content="width=device-width, initial-scale=1.0">

    <title>{{ block('title') }}</title>

    <link rel="canonical" 
        href="{% block canonical %}https://asperger.philippebeck.net{% endblock %}">
    <link rel="icon" 
        type="image/x-icon" 
        href="img/favicon.ico">
    <link rel="preconnect"  
        href="https://fonts.gstatic.com">

    <meta name="description"    
        content="{% block description %}{{ block('title') }} : {{ block('summary') }}{% endblock %}">
    <meta name="author"         
        content="Philippe Beck">

    <meta property="og:type"        
        content="website">
    <meta property="og:title"       
        content="{{ block('title') }}">
    <meta property="og:url"         
        content="{{ block('canonical') }}">
    <meta property="og:description" 
        content="{{ block('description') }}">
    <meta property="og:image"       
        content="{% block image %}https://asperger.philippebeck.net/img/asperger.jpg{% endblock %}">

    <meta name="twitter:card"           
        content="summary">
    <meta name="twitter:title"          
        content="{{ block('title') }}">
    <meta name="twitter:site"           
        content="{{ block('canonical') }}">
    <meta name="twitter:description"    
        content="{{ block('description') }}">
    <meta name="twitter:image"          
        content="{{ block('image') }}">
    <meta name="twitter:creator"        
        content="@ph_beck">

    <link rel="stylesheet" 
        href="https://fonts.googleapis.com/css2?family=Combo&family=GFS+Neohellenic&family=Inika&family=Nova+Mono&display=swap"> 
    <link rel="stylesheet" 
        href="node_modules/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" 
        href="node_modules/animadio/animadio.min.css">
    <link rel="stylesheet" 
        href="css/style.css">
</head>

<body>

    {{ include('layout/navbar.twig') }}

    <header>
        {% if (hasAlert()) %}
            <p id="alert" 
                class="bg-{{ getAlertType() }} color-white">
                {{ getAlertMessage() }}
            </p>
        {% endif %}

        <h1 class="color-violet">
            {{ block('title') }}
        </h1>
    </header>

    {% block main %}{% endblock %}

    {{ include('layout/footer.twig') }}

    {% block script %}{% endblock %}
</body>
</html>
