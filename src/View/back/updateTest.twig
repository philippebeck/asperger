{% extends 'layout/layout.twig' %}

{% block title %}Modifier un test{% endblock %}

{% block description %}{% endblock %}

{% block main %}
<main>
    <form class="form" 
        method="post" 
        action={{ url('test!update', {'id': test.id}) }}>
        <fieldset>
            <legend>
                <i class="fas fa-question-circle fa-2x"></i>
            </legend>
            <ul>
                <li>
                    <label for="category">
                        Test
                    </label>
                    <input id="category" 
                        name="category" 
                        type="text"
                        minlength="2"
                        maxlength="2"
                        value="{{ test.category }}"
                        required>
                </li>
                <li>
                    <label for="score_type">
                        Type de Score
                    </label>
                    <input id="score_type" 
                        name="score_type" 
                        type="number"
                        min="1"
                        max="2"
                        value="{{ test.score_type }}">
                </li>
                <li>
                    <label for="value_max">
                        Score Max
                    </label>
                    <input id="value_max" 
                        name="value_max" 
                        type="number"
                        min="50"
                        max="150"
                        value="{{ test.value_max }}"
                        required>
                </li>
                <li>
                    <label for="asperger_min">
                        Asperger Min
                    </label>
                    <input id="asperger_min" 
                        name="asperger_min" 
                        type="number"
                        min="9"
                        max="50"
                        value="{{ test.asperger_min }}"
                        required>
                </li>
                <li>
                    <label for="asperger_max">
                        Asperger Max
                    </label>
                    <input id="asperger_max" 
                        name="asperger_max" 
                        type="number"
                        min="33"
                        max="120"
                        value="{{ test.asperger_max }}"
                        required>
                </li>
                <li>
                    <label for="man_min">
                        Homme Min
                    </label>
                    <input id="man_min" 
                        name="man_min" 
                        type="number"
                        min="12"
                        max="55"
                        value="{{ test.man_min }}"
                        required>
                </li>
                <li>
                    <label for="man_max">
                        Homme Max
                    </label>
                    <input id="man_max" 
                        name="man_max" 
                        type="number"
                        min="26"
                        max="86"
                        value="{{ test.man_max }}"
                        required>
                </li>
                <li>
                    <label for="woman_min">
                        Femme Min
                    </label>
                    <input id="woman_min" 
                        name="woman_min" 
                        type="number"
                        min="11"
                        max="74"
                        value="{{ test.woman_min }}"
                        required>
                </li>
                <li>
                    <label for="woman_max">
                        Femme Max
                    </label>
                    <input id="woman_max" 
                        name="woman_max" 
                        type="number"
                        min="23"
                        max="106"
                        value="{{ test.woman_max }}"
                        required>
                </li>
                <li>
                    <label for="author">
                        Auteur
                    </label>
                    <textarea id="author" 
                        name="author" 
                        minlength="5"
                        maxlength="50"
                        required>{{ test.author }}</textarea>
                </li>
                <li>
                    <label for="year">
                        Année de Création
                    </label>
                    <input id="year" 
                        name="year" 
                        type="number"
                        min="2000"
                        max="2025"
                        value="{{ test.year }}"
                        required>
                </li>
                <li>
                    <label for="translation_author">
                        Traducteur
                    </label>
                    <textarea id="translation_author" 
                        name="translation_author" 
                        minlength="5"
                        maxlength="50"
                        required>{{ test.translation_author }}</textarea>
                </li>
                <li>
                    <label for="translation_year">
                        Année de Traduction
                    </label>
                    <input id="translation_year" 
                        name="translation_year" 
                        type="number"
                        min="2000"
                        max="2025"
                        value="{{ test.translation_year }}"
                        required>
                </li>
            </ul>
            <ul>
                <li>
                    <input type="reset" 
                        value="Réinitialiser">
                    <input type="submit" 
                        value="Modifier">
                </li>
            </ul>
        </fieldset>
    </form>
    <a class="btn-black btn-lg" 
        href="{{ url('admin') }}">
        Quitter
    </a>
</main>
{% endblock %}
