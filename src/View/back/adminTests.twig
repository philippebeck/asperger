<section class="menu-target1">
    <h2>
        <i class="fas fa-question-circle"></i> 
        Tests
    </h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Test
                    <hr>
                    Score Max (Type)
                </th>
                <th>
                    Score min/max
                </th>
                <th>
                    Auteur (Année)
                    <hr>
                    Traducteur (Année)
                </th>
            </tr>
        </thead>
        <tbody>

        {% for test in tests %}
            <tr>
                <td>
                    {{ test.category }}
                    <a class="btn-blue" 
                        href="{{ url('test!update', {'id': test.id}) }}"
                        title="Modifier le Test">
                        <i class="fas fa-pen-square fa-fw fa-lg"></i>
                    </a>
                    <hr>
                    {{ test.value_max }} 

                    {% if test.score_type %}
                        ({{ test.score_type }})
                    {% endif %}
                </td>
                <td>
                    {{ test.asperger_min }}/
                    {{ test.asperger_max }} (A)
                    <br>
                    {{ test.man_min }}/
                    {{ test.man_max }} (H)
                    <br>
                    {{ test.woman_min }}/
                    {{ test.woman_max }} (F)
                 </td>
                 <td>
                    {{ test.author }} 
                    ({{ test.year }})
                    <hr>
                    {{ test.translation_author }} 
                    ({{ test.translation_year }})
                 </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</section>
