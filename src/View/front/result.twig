<ul>
    {% for question in summary %}
    <li>
        {{ question.id }}.<br>
        {{ question.question }}<br>

        {% if info.category != 'FQ'%}
            <b>{{ question.answer|replace({1: "D'accord", 2: "Plutôt d'accord", 3: "Plutôt pas d'accord", 4: "Pas d'accord"}) }}</b><br>
        {% else %}
            <b>{{ question.answer}}</b><br>
        {% endif %}
        <i class="fas fa-minus fa-lg mar-bot-md mar-top-md"></i>
    </li>
    {% endfor %}
</ul>

<p class="deco-double">Votre quotient <i class="far fa-hand-point-right fa-lg"></i> {{ score }}</p>

<p>Voici quelques indications concernant le Quotient 
    {{ info.category|replace({'AQ': "Autistique", 'EQ': "Empathique", 'FQ': "Amitié & Relation", 'SQ': "Méthodique Révisé"}) }} :
</p>

<table class="table">
    <thead>
        <tr>
            <th colspan="2">{{ info.category }} : 
                Quotient {{ info.category|replace({'AQ': "Autistique", 'EQ': "Empathique", 'FQ': "Amitié & Relation", 'SQ': "Méthodique Révisé"}) }}
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Asperger</td>
            <td>{{ info.asperger_min }} - {{ info.asperger_max }}</td>
        </tr>
        <tr>
            <td>Homme</td>
            <td>{{ info.man_min }} - {{ info.man_max }}</td>
        </tr>
        <tr>
            <td>Femme</td>
            <td>{{ info.woman_min }} - {{ info.woman_max }}</td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">
                {% if info.category != 'FQ' %}
                    Type de calcul : 
                    {% if info.score_type == 1 %}
                        (fort) = (faible)
                    {% else %}
                        (fort) = 2*(faible)
                    {% endif %}
                {% endif %}
                <br>
                Quotient Max = {{ info.value_max }}
            </td>
        </tr>
    </tfoot>
</table>
